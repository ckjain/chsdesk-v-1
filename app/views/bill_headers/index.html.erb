<div class="row-fluid">
  <div class="span12">
	<ul class="breadcrumb">
	<li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
	<li class="active">Bill Header </li>
	<li class="pull-right"> </li>
	</ul>
  </div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span12">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top"></h2>
			<a href="#" class="settings box_button_3" title="config">&nbsp;</a>
			<a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
			<a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
			<div class="toggle_container">					
			<div class="block box_content round_bottom padding_20">
			<table class="table table-striped table-condensed table-bordered">
			<thead>
			  <tr>
				<th>Bill date</th>
				<th>From</th>
				<th>To</th>
				<th>Bill cycle</th>
				<th>Grace period</th>
				<th>Start Bill no</th>
				<th>End Bill no</th>
				<th>Bill format</th>
				<th>Final?</th>
				<th>Society</th>
				<th>Edit</th>
				<th>Cancel</th>
			  </tr>
			</thead>
			<tbody>
			<% @bill_headers.each do |bill_header| %>
			  <tr>
				<td><%= link_to h(l(bill_header.bill_date, :format => :long)), bill_header_url(bill_header) %></td>
				<td><%= l(bill_header.from_date, :format => :long) %></td>
				<td><%= l(bill_header.to_date, :format => :long) %></td>
				<td><%= bill_header.bill_cycle %></td>
				<td><%= bill_header.grace_period %></td>
				<td><%= bill_header.bill_number_start %></td>
				<td><%= bill_header.bill_number_end %></td>
				<td><%= bill_header.bill_number_format %></td>
				<td><%= bill_header.locked_period %></td>
				<td><%= bill_header.society_id %></td>
				<td><%= link_to ( image_tag("/assets/Overlay-edit.png")), edit_bill_header_path(bill_header), :class => 'btn' %></td>
				<td><%= link_to ( image_tag("/assets/Overlay-cancel.png")), bill_header, :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %></td>
			  </tr>
			<% end %>
			</tbody>
			</table>
				<br>
				</br>
				<%= will_paginate @bill_headers %>
				<%= link_to 'New Bill header', new_bill_header_path ,:class => 'btn btn-link' %>
				</div>
			</div>
		</div>
	</div>
</div><!--/row--> 