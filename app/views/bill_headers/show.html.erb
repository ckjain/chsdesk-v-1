<div class="row-fluid">
	<div class="span12">
		<ul class="breadcrumb">
			<li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
			<li><a href="http://localhost:3000/meetings">Bill Headers</a> <span class="divider">/</span></li>                                      
			<li class="active"><%= controller.action_name.capitalize %> </li>
		</ul>
	</div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span12">
		<div class="box grad_colour_dark_blue" id="box_0">
				<h2 class="box_head round_top">Bill Header</h2>
				<a href="#" class="settings box_button_3" title="config">&nbsp;</a>
				<a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
				<a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
				<div class="toggle_container">					
			<div class="block box_content round_bottom padding_20">
				<div class="block box_content round_bottom padding_20">
					<label class="control-label" for="focusedInput">Bill Date: <%= @bill_header.bill_date %></label>
					<label class="control-label" for="focusedInput">From <%= @bill_header.from_date %>&nbsp;
					To &nbsp; <%= @bill_header.to_date %></label>
					<label class="control-label" for="focusedInput">Bill Cycle : Every <%= @bill_header.bill_cycle %> months</label>
					<label class="control-label" for="focusedInput">Grace Period : <%= @bill_header.grace_period %> days</label>
					<label class="control-label" for="focusedInput">Starting Bill number: <%= @bill_header.bill_number_start %></label>
					<label class="control-label" for="focusedInput">Total number of bills : <%= @bill_header.bill_number_end %></label>
					<label class="control-label" for="focusedInput">Bill number Identifier: <%= @bill_header.bill_number_format %></label>
					<label class="control-label" for="focusedInput">Bill Finalised? : <%= @bill_header.locked_period %></label>
				</div>
			 	<div class="form-actions">
					<%= link_to ( image_tag("/assets/Overlay-edit.png")+' '+'Edit'), edit_bill_header_path(@bill_header), :class => 'btn' %>
					<%= link_to 'Back to Bill header', bill_headers_path, :class => 'btn' %>
				</div>
			</div>
		</div>
	</div>
	</div>
</div><!--/row--> 
