  <div class="row-fluid">
    <div class="span12">
    <div id="recinfoArea"></div>
    <div id="grid_bill_setup" style="margin-top: -10px; width:100%; height:425px; background-color:white;overflow:hidden"></div>
    <div id="pagingArea"></div>

	<script type="text/javascript" charset="utf-8">
		var grid = new dhtmlXGridObject("grid_bill_setup");
		grid.setImagePath("imgs/");
		grid.selMultiRows = true;
		grid.enableMultiselect(true);
		grid.enableUndoRedo();
		grid.setHeader("Head Name, Sub Head,Rate/sqft/month,Rate/unit/month,Service tax %,Days to discount,Discount %, S.Id");
		grid.setSizes();
		grid.setColSorting("str,str,int,int,int,int,int,int");
		grid.setInitWidths("150,150,110,110,100,110,70,*");
		grid.setColAlign("left,left,right,right,right,right,right,right");
		grid.setColTypes("ro,ed,ed,ed,ed,ed,ed,ed");
		grid.enableMathEditing(true);
	   	grid.setMathRound(2);
		grid.setSkin("sbdark");
		grid.enablePaging(true, 18, 25, "pagingArea", true, "recinfoArea");
		grid.setPagingSkin("bricks");
		grid.init();
		grid.enableCSVAutoID(true);
		grid.load("bill_setups/data.xml");

		dp = new dataProcessor("bill_setups/dbaction.xml/");
		dp.init(grid);
		
		function clear_filter(){
			grid.filterBy(0,"");
			grid._f_rowsBuffer = null;
		}

		</script>
    </div>
  </div>