		var grid = new dhtmlXGridObject("grid_bill");
		grid.setImagePath("/imgs/");
		grid.selMultiRows = true;
		grid.enableMultiselect(true);
		grid.enableUndoRedo();
		grid.setHeader("bill_number, from_date, to_date, bill_date, membership_id, parking_charges, noc_charges, property_tax, maintenance_charges, sinking_fund, repair_fund, other_charges, other_detail, service_tax, penalty_interest, discount_amount, current_bill_charges, payable_amount, bh.id, S.Id");
		grid.setSizes();
		grid.setColSorting("int,date,date,date,int,int,int,int,int,int,int,int,str,int,int,int,int,int,int,int");
		grid.setInitWidths("80,80,80,80,100,80,80,*");
		grid.setColAlign("left,left,right,right,right,right,right,right");
		grid.setColTypes("ed,dhxCalendarA,dhxCalendarA,dhxCalendarA,ed,edn,edn,edn,edn,edn,edn,edn,ed,edn,edn,edn,edn,edn,ed,ed");
		grid.enableMathEditing(true);
	   	grid.setMathRound(2);

		grid.setSkin("sbdark");
		grid.enablePaging(true, 20, 3, "pagingArea", true, "recinfoArea");
		grid.setPagingSkin("bricks");
		grid.init();
		grid.enableCSVAutoID(true);
		grid.load("data.xml");

		dp = new dataProcessor("dbaction.xml/");
		dp.init(grid);

		function clear_filter(){
			grid.filterBy(0,"");
			grid._f_rowsBuffer = null;
		}
		function add(){
			clear_filter();
			grid.addRow(grid.uid(), 'new bill');
		}
		function remove(){
			clear_filter();
			grid.deleteSelectedRows();
		}
		</script>
