      <ul>
	      <% @event.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>
	<label class="control-label" for="focusedInput">Title</label>
	<div class="controls"><%= f.text_field :title %></div>
