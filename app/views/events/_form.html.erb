<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
	      <% @event.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>
	<label class="control-label" for="focusedInput">Title</label>
	<div class="controls"><%= f.text_field :title %></div>
	<label class="control-label" for="focusedInput">Description</label>
	<%= f.text_area :description %>
	<label class="control-label" for="focusedInput">Start Date</label>
	<div class="controls"><%= f.text_field :starts_at %></div>
	<label class="control-label" for="focusedInput">End Date</label>
	<div class="controls"><%= f.text_field :ends_at %></div>
<ul>
      <div class="controls">
        <label class="checkbox uniform">
		  <%= f.check_box :all_day %>
		  <%= f.label :all_day, "All day" %>
        </label>
      </div>
</ul>
 	<div class="form-actions">
		<%= f.submit nil, :class => 'btn btn-primary' %>
		<%= link_to 'Cancel', events_path, :class => 'btn' %>
    </div>
<% end %>
