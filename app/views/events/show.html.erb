<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
    <li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>
	<li class="active">	<%= @event.title %></li>
    </ul>
  </div><!--/span-->
</div>
<div class="row-fluid">
        <div class="span8">
    		<div class="box grad_colour_dark_blue">
                <h2 class="box_head round_top">Event Calendar</h2>
                <a href="#" class="settings box_button_3" title="config">&nbsp;</a>
            <a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
            <a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
                <div class="toggle_container">					
                    <div class="block box_content round_bottom padding_20">
					<% if user_signed_in? %><p>
						<% if current_user.has_role? :super_admin or current_user.has_role? :society_admin %>
							<%= link_to 'New event', new_event_path,:class => 'btn btn-large btn-link' %>
						<% end %></p>
						<div id="calendar"></div>
					<% end %>
                    </div>
                </div>
            </div>
        </div><!--/span-->
	<div class="span4">
        <div class="box grad_colour_dark_blue" id="box_0">
        	<h2 class="box_head round_top"><%= @event.title %> </h2>
            <a href="#" class="settings box_button_3" title="config">&nbsp;</a>
            <a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
            <a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
            <div class="toggle_container">
                <div class="block box_content round_bottom padding_20">

				<p id="notice"><%= notice %></p>
				<p><b>Starts at:</b>
				  <%= l(@event.starts_at, :format => :long) %></p>
				<p><b>Ends at:</b>
				  <%= l(@event.ends_at, :format => :long) %></p>
				<p><b>Description:</b>
				  <%= @event.description %></p>
					<% if current_user.has_role? :super_admin %>
					<% if current_user.has_role? :society_admin %>
						<%= link_to 'Edit', edit_event_path(@event), :class => 'btn'  %> 
					<% end %></p>
					<% end %>
					<%= link_to 'All Events', events_path, :class => 'btn' %>
                </div>
            </div>
        </div>
	</div>
</div><!--/row--> 