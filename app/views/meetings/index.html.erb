<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
    <li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
	<li class="active">Meetings </li>
    </ul>
  </div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span12">
        <div class="box grad_colour_dark_blue" id="box_0">
            <h2 class="box_head round_top"></h2>
            <a href="#" class="settings box_button_3" title="config">&nbsp;</a>
            <a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
            <a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
            <div class="toggle_container">					
                <div class="block box_content round_bottom padding_20">

			<table class="table table-striped table-condensed">
	        <thead>
              <tr>
                <th>Meeting type</th>
                <th>Meeting Agenda</th>
                <th>Meeting Date & Time</th>
                <th>Meeting Place</th>
				<th>Called by</th>
				<th>Circular date</th>
                <th>
                </th>
              </tr>
            </thead>
            <tbody>
            <% @meetings.each do |meeting| %>
              <tr>
                <td><%= link_to meeting.meeting_name, meeting %></td>
                <td><%= pluralize(meeting.agendas.size, "Agenda") %></td>
                <td><%= meeting.meeting_date %></td>
                <td><%= meeting.meeting_place %></td>
                <td><%= meeting.issued_by %></td>
                <td><%= meeting.issue_date %></td>
                <td><%= meeting.society_id %></td>
                <td class="center">
        <td><div class="btn-toolbar">
				<div class="btn-group">
                  <a class="btn btn-mini" >
                    <i class="icon-zoom-in">
                    </i>
                  </a>
                  <a class="btn btn-mini" >
                    <i class="icon-edit">
                    </i>
                  </a>
                  <a class="btn btn-mini btn-danger" >
 			<%= link_to ( image_tag("/assets/Overlay-cancel.png")), meeting, :method => :delete, :confirm => "Are you sure?" %>

                    <i class="icon-trash icon-white">
                    </i>
                  </a>
				</div>
			</div>
                </td>
              </tr>
			<% end %>
            </tbody>
          </table>
          <%= will_paginate @meetings %>
          <%= link_to 'New Meeting', new_meeting_path %>
                </div>                                
            </div>
        </div>
	</div>
</div><!--/row--> 