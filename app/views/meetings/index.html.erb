<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
    <li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
	<li class="active">Meetings </li>
    </ul>
  </div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span8">
        <div class="box grad_colour_dark_blue" id="box_0">
            <h2 class="box_head round_top"></h2>
            <a href="#" class="settings box_button_3" title="config">&nbsp;</a>
            <a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
            <a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
            <div class="toggle_container">					
                <div class="block box_content round_bottom padding_20">
			<% content_for :meeting_name, @meeting ? @meeting.meeting_name : "meetings" %>
			<% for meeting in @meetings %>
		  <div class="event">
                <%= link_to meeting.meeting_name, :meeting_id => meeting %>
                meeting called by <%= meeting.issued_by %>&nbsp;&nbsp;
                on <%= meeting.issue_date %>&nbsp;&nbsp;
                <%= meeting.society_id %>
	 			<%= link_to ( image_tag("/assets/Overlay-cancel.png")), meeting, :method => :delete, :confirm => "Are you sure?" %>
		  </div>
			<% end %>
          <%= will_paginate @meetings %>
          <%= link_to 'New Meeting', new_meeting_path %>
                </div>                                
            </div>
        </div>
	</div>
	<div class="span4">
        <div class="box grad_colour_dark_blue" id="box_0">
            <h2 class="box_head round_top"></h2>
            <a href="#" class="settings box_button_3" title="config">&nbsp;</a>
            <a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
            <a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
            <div class="toggle_container">					
                <div class="block box_content round_bottom padding_20">
					<div data-pjax-container>
					  <% if @meeting %>
					  <div id="event_details">
					    <h3><%= best_in_place_if @meeting.meeting_name, @meeting, :meeting_name %></h3>
					    <dl>
					      <dt>Circular Date:</dt>
					      <dd><%= best_in_place_if @meeting.issue_date, @meeting, :issue_date %></dd>
					      <dt>Meeting Place:</dt>
					      <dd><%= best_in_place_if @meeting.meeting_place, @meeting, :meeting_place %></dd>
				          <dt>Agenda:</dt>
						<% @meeting.agendas.each do |agenda| %>
						  <li> <%= agenda.meeting_agendas %>
						    <ol class="resolutions">
						      <% agenda.resolutions.each do |resolution| %>
						        <li><%= resolution.meeting_resolutions %></li>
						      <% end %>
						    </ol>
						  </li>
						<% end %>

					    </dl>
					    <p class="actions">
					      <%= link_to ( image_tag("/assets/Overlay-cancel.png")), @meeting, method: :delete, confirm: "Are you sure?" %>
					    </p>
					  </div>
					  <% end %>
					</div>
                </div>                                
            </div>
        </div>
	</div>
</div><!--/row-->
