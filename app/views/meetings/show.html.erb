<div class="row-fluid">
	<div class="span12">
		<ul class="breadcrumb">
			<li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
			<li><a href="http://localhost:3000/meetings">Meetings</a> <span class="divider">/</span></li>                                      
			<li class="active"><%= @meeting.meeting_name %>
		</ul>
	</div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span8">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top">Agenda for the meeting on <%= l(@meeting.meeting_date, :format => :long) %>&nbsp;
			at <%= @meeting.meeting_place %></h2>
			<a href="#" class="settings box_button_3" title="config">&nbsp;</a>
			<a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
			<a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
			<div class="toggle_container">					
				<div class="block box_content round_bottom padding_20">
					<ol class="agendas">
						<% @meeting.agendas.each do |agenda| %>
						  <li> <%= agenda.meeting_agendas %>
						    <ol class="resolutions">
						      <% agenda.resolutions.each do |resolution| %>
						        <li><%= resolution.meeting_resolutions %></li>
						      <% end %>
						    </ol>
						  </li>
						<% end %>
					</ol>
				<div class="form-actions">
					<%= link_to 'Edit', edit_meeting_path(@meeting), :class => 'btn' %>
					<%= link_to 'Back to Meetings', meetings_path, :class => 'btn' %>
				</div>
				</div>
			</div>
		</div>
	</div>
	<div class="span4">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top">Attending Members</h2>
			<a href="#" class="settings box_button_3" title="config">&nbsp;</a>
			<a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
			<a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
			<div class="toggle_container">					
				<div class="block box_content round_bottom padding_20">
					<ul>
					<% @meeting.members.each do |member| %>
					  <li><%= member.name %></li>
					<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div><!--/row--> 