<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
    <li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
	<li class="active">Staffs </li>
    </ul>
  </div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span12">
        <div class="box grad_colour_dark_blue" id="box_0">
            <h2 class="box_head round_top"></h2>
            <a href="#" class="settings box_button_3" title="config">&nbsp;</a>
            <a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
            <a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
            <div class="toggle_container">					
            <div class="block box_content round_bottom padding_20">

			<table class="table table-striped table-condensed">
	        <thead>
			  <tr>
			    <th>Name</th>
			    <th>Gender</th>
			    <th>Category</th>
			    <th>Age</th>
			    <th>Email</th>
			    <th>Mobile</th>
			    <th>Is active</th>
			    <th>Joining date</th>
			    <th>Salary</th>
			    <th>Photo</th>
			    <th>S.ID</th>
			    <th>
			    </th>
			    <th>
			    </th>
			    <th>
			    </th>
			  </tr>
	        </thead>
			<tbody>
			  <% @staffs.each do |staff| %>
			    <tr>
					<td><%= link_to h(staff.staff_name), staff_url(staff) %></td>
					<td><%= best_in_place staff,:gender %></td>
					<td><%= best_in_place staff,:staff_category %></td>
					<td><%= best_in_place staff,:staff_age %></td>
					<td><%= best_in_place staff,:staff_email, staff %></td>
					<td><%= best_in_place staff,:staff_phone %></td>
					<td><%= staff.active %></td>
					<td><%= staff.joining_date.to_date %></td>
					<td><%= best_in_place staff,:staff_salary %></td>
				    <td><%= link_to (image_tag staff.avatar.url(:thumb)), staff %></td>
					<td><%= staff.society_id %></td>
					<td><%= link_to 'Show', staff %></td>
					<td><%= link_to 'Edit', edit_staff_path(staff) %></td>
					<td><%= link_to 'Destroy', staff, :confirm => 'Are you sure?', :method => :delete %></td>
			    </tr>
			  <% end %>
			 </tbody>
			</table>
<br>
</br>
<%= will_paginate @staffs %>
<%= link_to 'New Staff', new_staff_path %>
                </div>                                
            </div>
        </div>
	</div>
</div><!--/row--> 