<p id="notice"><%= notice %></p>
<div class="row-fluid">
  <div class="span12">
	<ul class="breadcrumb">
	<li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>
	<li><a href="http://localhost:3000/staffs">Staffs</a> <span class="divider">/</span></li>
	<li class="active"><%= @staff.staff_name %>
	</ul>
  </div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span8">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top"></h2>
			<a href="#" class="settings box_button_3" title="config">&nbsp;</a>
			<a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
			<a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
			<div class="toggle_container">
				<div class="block box_content round_bottom padding_20">
				<p><b>Name:</b>
				  <%= @staff.staff_name %></p>
				<p><b>Gender:</b>
				  <%= @staff.gender %></p>
				<p><b>Age:</b>
				  <%= @staff.staff_age %></p>
				<p><b>Email:</b>
				  <%= @staff.staff_email %></p>
				<p><b>Phone:</b>
				  <%= @staff.staff_phone %></p>
				<p><b>Current address:</b>
				  <%= @staff.staff_current_address %></p>
				<p><b>Permamnent address:</b>
				  <%= @staff.staff_permamnent_address %></p>
				<p><b>Designation:</b>
				  <%= @staff.staff_category %></p>
				<p><b>Salary:</b>
				  <%= @staff.staff_salary %></p>
				<p><b>Joining date:</b>
				  <%= @staff.joining_date %></p>
				<%= link_to 'Edit', edit_staff_path(@staff) %>
				<%= link_to 'Back', staffs_path %>
				</div>
			</div>
		</div>
	</div>
	<div class="span4">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top">Staff</h2>
			<a href="#" class="settings box_button_3" title="config">&nbsp;</a>
			<a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
			<a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
			<div class="toggle_container">
				<div class="block box_content round_bottom padding_20">
					<ul>
					<%= image_tag @staff.avatar.url %>
					<%= image_tag @staff.avatar.url(:medium) %>
					<%= image_tag @staff.avatar.url(:thumb) %>
				<p><b>Active:</b>
				  <%= @staff.active %></p>
				<p><b>Society:</b>
				  <%= @staff.society_id %></p>
					</ul>
				</div>
			</div>
		</div>
	</div>

</div><!--/row--> 