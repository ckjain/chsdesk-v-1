<div class="row-fluid">
	<div class="span12">
		<ul class="breadcrumb">
		<li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>
		<li><a href="http://localhost:3000/users">Users</a> <span class="divider">/</span></li>
		<li class="active">	<%= @user.name %> </li>
		</ul>
	</div><!--/span-->
</div>
<div class="row-fluid">
	<div class="span6">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top">
			<%= @user.id if @user.id %>&nbsp;&nbsp;&nbsp;&nbsp;
			<%= best_in_place @user, :name if @user.name %></h2>
			<a href="#" class="settings box_button_3" title="config">&nbsp;</a>
			<a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
			<a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
			<div class="toggle_container">
				<div class="block box_content round_bottom padding_20">
				<form>
				<fieldset>
					<label><%= f.label :name, t("activerecord.attributes.user.name", :default => "Name") %></label>
					<%= f.text_field :name, :class => 'text', :placeholder => "Type something…" %>
					<label><%= f.label :email, t("activerecord.attributes.user.email", :default => "Email") %></label>
					<%= f.text_field :email, :class => 'text', :placeholder => "Type something…" %>
					<label class="control-label" for="focusedInput">Date of Birth</label>
					<div class="controls"><%= f.text_field :date_of_birth %></div>
					<label><%= f.label :phone_number, t("activerecord.attributes.user.phone_number", :default => "Phone number") %></label>
					<%= f.text_field :phone_number, :class => 'text', :placeholder => "Type something…" %>
					<label><%= f.label :zip, t("activerecord.attributes.user.zip", :default => "Zip") %></label>
					<%= f.text_field :zip, :class => 'text', :placeholder => "Type something…" %>
				</fieldset>
				</form>
				</div>
			</div>
		</div>
	</div>
	<div class="span6">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top">	Profile</h2>
			<a href="#" class="settings box_button_3" title="config">&nbsp;</a>
			<a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
			<a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
			<div class="toggle_container">
				<div class="block box_content round_bottom padding_20">
					<label><%= f.label :bio, t("activerecord.attributes.user.bio", :default => "Bio") %></label>
					<%= f.text_field :bio, :class => 'text', :placeholder => "Type something…" %>
					<label><%= f.label :avatar_url, t("activerecord.attributes.user.avatar_url") %></label>
					<%= f.text_field :avatar_url, :class => 'text', :placeholder => "Type something…" %>
					<div class="form-actions">
						<button class="btn primary" type="submit">Save</button>
						<button class="btn primary" type="submit"><%= link_to "Cancel", users_path %></button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div><!--/row--> 