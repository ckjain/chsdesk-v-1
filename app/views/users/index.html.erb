
<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
    <li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
	<li class="active">Users </li>
	<li class="pull-right"> 
	    Send Bulk Invitations:
	    <%= link_to "10 &#183;".html_safe, bulk_invite_path(:quantity => '10') %>
	    <%= link_to "50 &#183;".html_safe, bulk_invite_path(:quantity => '50') %>
	    <%= link_to "100 &#183;".html_safe, bulk_invite_path(:quantity => '100') %>
	    <%= link_to "500 &#183;".html_safe, bulk_invite_path(:quantity => '500') %>
	    <%= link_to "1000", bulk_invite_path(:quantity => '1000') %>
	</li>
    </ul>
  </div><!--/span-->
</div>

<div class="row-fluid">
    <div class="span12">
		<div class="box grad_colour_dark_blue">
            <h2 class="box_head round_top">Total <%= @users.count%>  Users</h2>
            <a href="#" class="settings box_button_3" title="config">&nbsp;</a>
	        <a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
	        <a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
            <div class="toggle_container">					
                <div class="block box_content round_bottom padding_20">
					<h4>Filter Users:&nbsp;&nbsp;<%= link_to t('.options.all'), users_url %> 
					&#183;&nbsp;<%= link_to t('.options.active'), active_users_url %>
					&#183;&nbsp;<%= link_to t('.options.suspended'), suspended_users_url %>
					&#183;&nbsp;<%= link_to t('.options.pending'), pending_users_url %>
					&#183;&nbsp;<%= link_to t('.options.deleted'), deleted_users_url %>

					<span class="pull-right" ><%= form_tag users_path, :method => 'get', :id => "users_search" do %>
					<%= text_field_tag :search, params[:search], :placeholder => 'Search by Name' %>
					<% end %></span></h4>
					<br><div id="users"><%= render 'users' %></div>
                </div>
            </div>
        </div>
    </div><!--/span-->
</div><!--/row-->
