<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
    <li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
    <li><a href="http://localhost:3000/meetings">Vendors</a> <span class="divider">/</span></li>                                      
	<li class="active"><%= controller.action_name.capitalize %> </li>
	<li class="pull-right"> 
	</li>
    </ul>
  </div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span7">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top"><%= @vendor.vendor_name %> </h2>
			<div class="block box_content round_bottom padding_20">

<%= form_for @vendor do |f| %>
				<% if @vendor.errors.any? %>
					<div class="error_messages">
						<h2><%= pluralize(@vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>
						<ul>
						<% @vendor.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
						</ul>
					</div>
				<% end %>
				<div class="well form-inline">
					<%= f.text_field :vendor_name, :style=>"width:30%;", :placeholder => 'Company Name' %>
					<%= f.text_field :contact_name, :style=>"width:30%;", :placeholder => 'Contact Person' %>
					<%= f.text_field :vendor_phone, :style=>"width:30%;", :placeholder => 'Phone' %>
				</div>
				<div class="well form-inline">
					<%= f.text_field :vendor_email, :style=>"width:25%;", :placeholder => 'Email' %> 
					<%= f.number_field :service_type, :style=>"width:25%;", :placeholder => 'Type of service' %> 
					<%= f.text_field :vat_number, :style=>"width:25%;", :placeholder => 'Vat Number' %> 
				</div>
			 	<div class="well form-inline">
					<%= f.text_field :stax_reg_number, :style=>"width:40%;", :placeholder => 'Service tax Number' %> 
					<%= f.text_field :pan_number, :style=>"width:40%;", :placeholder => 'Pan Number' %> 
				</div>
				<div class="well form-inline">
					<%= f.text_field :address, :style=>"width:45%;", :placeholder => 'Current Address' %> 
					<%= f.text_field :payee_name, :style=>"width:45%;", :placeholder => 'Payee Name' %> 
				</div>
				<div class="well form-inline">
					<%= f.text_field :section_code, :style=>"width:40%;", :placeholder => 'Section code' %> 
				</div>
			</div>
		</div>
	</div>
	<div class="span5">
		<div class="box grad_colour_dark_blue" id="box_0">
			<h2 class="box_head round_top"><%= controller.action_name.capitalize %> Photo</h2>
			<div class="block box_content round_bottom padding_20">

				<label class="control-label" for="focusedInput">is recurring?</label>
				<div class="controls"><%= f.check_box :is_recurring %></div>
			 	<div class="form-actions">
					<%= f.submit nil, :class => 'btn btn-primary' %>
					<%= link_to 'Cancel', vendors_path, :class => 'btn' %>
				</div>
	<% end %></form>
			</div>
		</div>
	</div>
</div>
