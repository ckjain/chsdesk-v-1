<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
    <li><a href="http://localhost:3000">Dashboard</a> <span class="divider">/</span></li>                                      
	<li class="active">Vendors </li>
    </ul>
  </div><!--/span-->
</div>

<div class="row-fluid">
	<div class="span12">
        <div class="box grad_colour_dark_blue" id="box_0">
            <h2 class="box_head round_top"></h2>
            <a href="#" class="settings box_button_3" title="config">&nbsp;</a>
            <a href="#" class="toggle box_button_2" title="toggle">&nbsp;</a>
            <a href="#" class="destroy box_button_1" title="close">&nbsp;</a>
            <div class="toggle_container">					
            <div class="block box_content round_bottom padding_20">

			<table class="table table-striped table-condensed table-bordered">
	        <thead>
			  <tr>
			    <th>Name</th>
			    <th>Contact name</th>
			    <th>Mobile</th>
			    <th>Email</th>
			    <th>Payee name</th>
			    <th>Service type</th>
			    <th>Society</th>
			    <th>
			    </th>
			    <th>
			    </th>
			    <th>
			    </th>
			  </tr>
	        </thead>
			<tbody>
			  <% @vendors.each do |vendor| %>
			    <tr>
					<td><%= link_to h(vendor.vendor_name), vendor_url(vendor) %></td>
					<td><%= best_in_place vendor,:contact_name %></td>
					<td><%= best_in_place vendor,:vendor_phone %></td>
					<td><%= best_in_place vendor,:vendor_email %></td>
					<td><%= best_in_place vendor,:payee_name, vendor %></td>
					<td><%= best_in_place vendor,:service_type %></td>
					<td><%= vendor.society_id %></td>
					<td><%= link_to 'Show', vendor %></td>
					<td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
					<td><%= link_to 'Destroy', vendor, :confirm => 'Are you sure?', :method => :delete %></td>
			    </tr>
			  <% end %>
			 </tbody>
			</table>
<br>
</br>
<%= will_paginate @vendors %>
<%= link_to 'New Vendor', new_vendor_path %>
                </div>                                
            </div>
        </div>
	</div>
</div><!--/row--> 